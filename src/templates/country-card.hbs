{{#each this}}
    <div class="wrapper">
        <div class="content"> 
            <h2 class="country__name">{{ name }}</h2>
            <p class="country__capital">Capital: {{ capital }}</p>
            <p class="country__population">Population: {{ population }}</p>
            <p>Languages:
                <ul class="country__languages">
                    {{#each languages}}
                    <li>{{name}}</li>
                    {{/each}}
                </ul>
            </p>
        </div>
        <img src="{{ flag }}" alt="The flag of the country" class="country__flag" width="300">
    </div>      

{{/each}}
